extends ../base.pug 

block content 
    if errorMessage 
        span=errorMessage
    div.user_area
        form(method = "POST", enctype = "multipart/form-data").form
            label(for="video") Video File 
            input(type="file", accept="video/*", required, id="video", name="video")
            input(placeholder="Title", required, type="text" name="title")
            input(placeholder="Description", required, type="text" name="description")
            input(placeholder="Hashtags, separated by comma", required, type="text" name="hash")
            input(value = "Upload Video", type="submit").active_btn