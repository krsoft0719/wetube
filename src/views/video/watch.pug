extends ../base.pug



block content
    div#videoContainer.videoContainer
        div.video_main
            video(src="/"+video.file_url)
            div.videoTotalControls
                div.timeline 
                    input(type="range", step="1", value=0, min="0")#timeline
                div#videoControls.videoControls
                    div.leftControls
                        button#play 
                            i.fas.fa-play
                        div.volumeArea
                            button#mute.muteIcon
                                i.fas.fa-volume-up
                            input(type="range", step="0.1", value=0.5, min="0", max='1')#volume
                        div.videoPlayTime     
                            span#currentTime 0:00
                            span  / 
                            span#totalTime 
                    div.rightControls 
                        button#fullScreen 
                            i.fa-solid.fa-expand

