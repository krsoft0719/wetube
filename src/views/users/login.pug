extends ../base

block content 
    if(errorMessage) 
            p=errorMessage
    div.user_area
        form(method="POST").form
            input(type="text" name = "userId" required placeholder="Id") 
            input(type="password" name = "password" required placeholder="Password") 
            input(type="submit", value = "Log In").active_btn
            br
            div.line
            div.social_login
                a(href="/users/github/start") 
                    i.fab.fa-github
                    |   Continue with Github &rarr; 

    hr
    div.account_area 
        span Don't have an account? 
        a(href="/Join") Create One Now  &rarr;
        