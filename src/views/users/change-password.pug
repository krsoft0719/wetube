extends ../base

block content 
    if errorMessage
            span=errorMessage
    form(method="post")
        input(placeholder="Old Password" name ='oldpw' type ="password")
        input(placeholder="New Password" name ='newpw' type ="password")
        input(placeholder="New Password Confirmation" name ='pwconfirm' type ="password")
        input(type="submit", value="Change Password") 